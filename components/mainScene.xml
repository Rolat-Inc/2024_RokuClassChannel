<?xml version="1.0" encoding="utf-8" ?>
<component name="MainScene" extends="Scene">
	<interface>
		<function name="showView" />
		<function name="setFocusToCurrentView" />
	</interface>

	<script type="text/brightscript" uri="mainScene.brs" /> 

	<children>
		<LayoutGroup
			layoutDirection="vert"
			itemSpacings="[70]">

			<Overhang
				showClock="true"
				logoUri="pkg:/images/rolat-logo-blanco.png" />

			<LayoutGroup
				layoutDirection="horiz"
				itemSpacings="[20,100]"
				addItemSpacingAfterChild="false">

				<!-- <SideBar id="sideBar"/> -->
				<PosterGridBar id="posterGridBar" />
				<Group id="viewContainer"/>
			</LayoutGroup>
		</LayoutGroup>                      
	</children>
</component>
